{
    "manifest_version": 2,
    "name": "Silk for Canvas",
    "version": "3.0",
    "description": "Clean up Canvas pages and make your experience as smooth as Silk.",
    "icons": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "64": "icons/icon.svg",
      "128": "icons/icon.svg"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_icon": "icons/icon.svg",
      "default_title": "Silk for Canvas",
      "default_popup": "popups/menu.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.instructure.com/*"],
        "exclude_matches": ["*://www.instructure.com/*"],
        "css": ["styles/fonts.css", "styles/page.css"],
        "js": ["scripts/accent.js"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/*"],
        "exclude_matches": ["*://www.instructure.com/*"],
        "js": [
          "scripts/navigation.js",
          "scripts/favicon.js",
          "scripts/todo.js"
        ],
        "run_at": "document_end"
      },
      {
        "matches": ["*://*.instructure.com/"],
        "exclude_matches": ["*://www.instructure.com/"],
        "css": ["styles/dashboard.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/"],
        "exclude_matches": ["*://www.instructure.com/"],
        "js": ["scripts/dashboard.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["*://*.instructure.com/courses/*"],
        "css": ["styles/course.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/courses/*"],
        "js": ["scripts/course.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["*://*.instructure.com/courses/*/assignments/*"],
        "css": ["styles/content.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/courses/*/discussion_topics/*"],
        "css": ["styles/discussion.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/courses/*/quizzes/*"],
        "css": ["styles/quiz.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/courses/*/grades"],
        "css": ["styles/grades.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/conversations"],
        "css": ["styles/inbox.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.instructure.com/grades"],
        "css": ["styles/grades.css"],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      "icons/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "support@innominate.win"
      }
    }
  }
  