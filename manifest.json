{
  "manifest_version": 3,
  "name": "Silk for Canvas",
  "version": "1.3.10",
  "description": "Clean up Canvas pages and make your experience as smooth as Silk.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": "icons/icon-128.png",
    "default_title": "Silk for Canvas",
    "default_popup": "popups/menu.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "exclude_matches": ["*://www.instructure.com/*"],
      "css": [
        "styles/fonts.css",
        "styles/page.css"
      ],
      "js": [
        "scripts/colors.js",
        "scripts/todo.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instructure.com/*"],
      "exclude_matches": ["*://www.instructure.com/*"],
      "js": [
        "scripts/navigation.js",
        "scripts/favicon.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.instructure.com/"],
      "exclude_matches": ["*://www.instructure.com/"],
      "css": ["styles/dashboard.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.instructure.com/courses/*",
        "*://*.instructure.com/grades"
      ],
      "css": ["styles/course.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instructure.com/courses/*"],
      "js": ["scripts/course.js"],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.instructure.com/courses/*/assignments/*"],
      "css": [
        "styles/assignment.css",
        "styles/rubric.css"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.instructure.com/courses/*/discussion_topics",
        "*://*.instructure.com/courses/*/discussion_topics/*"
      ],
      "css": ["styles/discussion.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instructure.com/courses/*/quizzes/*"],
      "css": ["styles/quiz.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://canvadocs.instructure.com/1/sessions/*"],
      "css": ["styles/files.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instructure.com/courses/*/assignments/*/submissions/*"],
      "css": ["styles/file_submission.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instructure.com/conversations"],
      "css": ["styles/inbox.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instructure.com/courses/*/gradebook/speed_grader*"],
      "css": [
        "styles/grader.css",
        "styles/rubric.css"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.svg"],
      "matches": ["*://*.instructure.com/*"]
    }
  ]
}
